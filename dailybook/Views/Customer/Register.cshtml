@model dailybook.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Register</h1>
        <form asp-action="Register">
            <div class="row">
                @* <div class="col-md-12 col-lg-6 col-xl-7"> *@
                    <div class="row">
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.Email" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.Email" class="form-control">
                                <span asp-validation-for="@Model.Email" class ="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.Pass" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.Pass" class="form-control">
                                <span asp-validation-for="@Model.Pass" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.Fullname"></label><sup>*</sup>
                        <input asp-for="@Model.Fullname" class="form-control"/>
                        <span asp-validation-for="@Model.Fullname" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.Dob"></label><sup>*</sup>
                        <input asp-for="@Model.Dob" class="form-control" />
                        <span asp-validation-for="@Model.Dob" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.Phone"></label><sup>*</sup>
                        <input asp-for="@Model.Phone" class="form-control" />
                        <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.Address"></label><sup>*</sup>
                        <input asp-for="@Model.Address" class="form-control" placeholder="House Number Street Name" />
                        <span asp-validation-for="@Model.Address" class="text-danger"></span>
                    </div>
@*                     <div class="form-item">
                        <label class="form-label my-3" for="Ava">Avatar</label><sup>*</sup>
                        <input type="file" name ="Ava" class="form-control" />
                    </div> *@
                </div>
                <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                    <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Register</button>
                </div>
            @* </div> *@
        </form>
    </div>
</div>

